<!DOCTYPE html>
<html>
  <head>
    <title>Instants</title>
    <%= csrf_meta_tags %>
    <script type="text/javascript">
      <% if logged_in? %>
        window.currentUser = <%= render(
          "api/users/user.json.jbuilder",
          user: current_user
        ).html_safe %>
      <% end %>
      window.images = {
        logo: "<%= image_path('logo.png') %>",
      }
    </script>


    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
